<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <ImageView
            android:id="@+id/iv_car_photo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_normal"/>

        <TextView
            android:id="@+id/tv_car_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_car_photo"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/iv_car_photo"
            android:maxLines="1"
            android:textColor="@color/title_and_main_text"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/iv_car_photo"
            android:text="价格:"
            android:textColor="@color/straight_matter_and_secondary_text"
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_car_info"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv"
            android:text="¥"
            android:textColor="@color/main_and_price"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv"
            android:layout_below="@+id/tv"
            android:layout_marginTop="10dp"
            android:text="状态："
            android:textColor="@color/straight_matter_and_secondary_text"
            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv2"
            android:layout_toRightOf="@+id/tv2"
            android:textColor="@color/straight_matter_and_secondary_text" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="11dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow"
            />
    </RelativeLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D7D7D7"/>

</RelativeLayout>