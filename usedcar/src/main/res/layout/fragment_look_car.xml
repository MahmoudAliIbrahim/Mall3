<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_parent"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/title"
            style="@style/WhiteText18"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.hxqc.mall.core.views.materialedittext.MaterialEditText
            android:id="@+id/province"
            style="@style/FloatingEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_big_16"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:layout_marginTop="@dimen/normal_margin_big_16"
            android:drawableRight="@mipmap/ic_triangle"
            android:focusable="false"
            android:hint="选择省份"
            android:inputType="none" />

        <com.hxqc.mall.core.views.materialedittext.MaterialEditText
            android:id="@+id/city"
            style="@style/FloatingEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_big_16"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:layout_marginTop="@dimen/normal_margin_big_16"
            android:drawableRight="@mipmap/ic_triangle"
            android:focusable="false"
            android:hint="选择城市"
            android:inputType="none" />

        <com.hxqc.mall.core.views.materialedittext.MaterialEditText
            android:id="@+id/region"
            style="@style/FloatingEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_margin_big_16"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:layout_marginTop="@dimen/normal_margin_big_16"
            android:drawableRight="@mipmap/ic_triangle"
            android:focusable="false"
            android:hint="选择区域"
            android:inputType="none" />

        <Button
            android:id="@+id/bt_submit"
            style="@style/btn_vermilion"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:layout_marginTop="42dp"
            android:text="保 存" />
    </LinearLayout>
</LinearLayout>