<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instalment_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/instalment_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title_and_main_text"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/instalment_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_subheading"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月还款额:"
                android:textColor="@color/text_color_subheading"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/instalment_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_and_price"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/divider" />

    <ImageView
        android:id="@+id/instalment_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/divider" />
</LinearLayout>
