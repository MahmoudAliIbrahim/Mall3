<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv"
            android:layout_marginLeft="16dp"
            android:text="*"
            android:textColor="@color/font_red" />

        <TextView
            android:id="@+id/tv"
            style="@style/BlackText14"
            android:layout_marginTop="@dimen/activity_vertical_margin_16"
            android:layout_toRightOf="@+id/tv_star"
            android:text="车主实拍照片" />

        <TextView
            android:id="@+id/tv2"
            style="@style/GrayText12"
            android:layout_alignLeft="@+id/tv"
            android:layout_below="@+id/tv"
            android:layout_marginTop="@dimen/activity_vertical_margin_16"
            android:text="最多可上传5张图，点击图片设置封面，横向拍摄效果更佳。" />

        <com.hxqc.widget.GridViewNoSlide
            android:id="@+id/grid_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv2"
            android:horizontalSpacing="@dimen/normal_margin_small_8"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:padding="16dp"
            android:verticalSpacing="@dimen/normal_margin_small_8" />

    </RelativeLayout>

    <View style="@style/UnderLine" />
</LinearLayout>
