<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="填写手机, 预约时间, 我们的客服将尽快与您联系"
        android:textColor="@color/text_color_subheading"
        android:textSize="@dimen/text_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_car_order_edit"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/order_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_loginic1"
            android:drawablePadding="10dp"
            android:hint="输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/title_and_main_text"
            android:textColorHint="@color/text_color_subheading"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/order_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@mipmap/ic_forminputdelete"
            android:visibility="gone" />

        <com.hxqc.mall.launch.view.CountdownButton
            android:id="@+id/order_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="@color/text_color_subheading"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <EditText
        android:id="@+id/order_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_car_order_edit"
        android:drawableLeft="@mipmap/ic_code"
        android:drawablePadding="5dp"
        android:hint="验证码"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/title_and_main_text"
        android:textColorHint="@color/text_color_subheading"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_car_order_edit"
        android:drawableLeft="@mipmap/ic_historicalsearch"
        android:drawablePadding="10dp"
        android:hint="预约时间"
        android:padding="10dp"
        android:textColor="@color/title_and_main_text"
        android:textColorHint="@color/text_color_subheading"
        android:textSize="@dimen/text_size_14" />

    <Button
        android:id="@+id/order_button"
        style="@style/btn_vermilion"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:text="预   约" />

    <com.hxqc.mall.core.views.VoiceCaptchaView
        android:id="@+id/order_voice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="@color/text_color_subheading" />


    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@android:color/transparent" />
</LinearLayout>
