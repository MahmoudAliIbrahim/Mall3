<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/future_title"
        style="@style/BlackText16"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin_16"
        android:gravity="center_vertical"
        tools:text="未来5年价格趋势" />

    <View style="@style/UnderLine" />

    <TextView
        android:id="@+id/chart_unit"
        style="@style/GrayText14"
        android:layout_marginLeft="@dimen/activity_vertical_margin_16"
        android:layout_marginTop="@dimen/activity_vertical_margin_16"
        android:gravity="center_vertical"
        tools:text="单位：万元" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin_16"
        android:padding="@dimen/activity_vertical_margin_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin_16"/>
</LinearLayout>
