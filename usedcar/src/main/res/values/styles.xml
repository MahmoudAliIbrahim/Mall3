<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!--action bar 输入框-->
    <style name="toolbar_edit_text">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_search</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">@string/title_activity_search</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 举报页面小标题的样式 -->
    <style name="reportpage_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/title_and_main_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/tag_background</item>
    </style>

    <!--用于车辆列表，评论列表，条件选项-->
    <style name="UsedCarRadio">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_used_car_radio</item>
        <item name="android:textColor">@drawable/textcolor_used_car_radio</item>
        <item name="android:layout_height">45dp</item>
    </style>
</resources>
