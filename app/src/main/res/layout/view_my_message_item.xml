<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_item_height"
    android:background="@drawable/bg_message_item"
    android:padding="@dimen/item_padding_10">

    <com.hxqc.mall.views.MarkableImageView
        android:id="@+id/message_item_icon"
        android:layout_width="@dimen/news_item_icon_size"
        android:layout_height="@dimen/news_item_icon_size"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_padding_10" />

    <TextView
        android:id="@+id/message_item_title"
        style="@style/BlackText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_item_icon"
        android:layout_toRightOf="@+id/message_item_icon"
        android:maxLines="1"
        tools:text="订单消息" />

    <TextView
        android:id="@+id/message_item_content"
        style="@style/GrayText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/message_item_icon"
        android:layout_toRightOf="@+id/message_item_icon"
        android:maxLines="1"
        tools:text="单消息订单消息订单消息订单消息订单消息" />

    <TextView
        android:id="@+id/message_item_mark"
        style="@style/GrayText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        tools:text="19:30" />


</RelativeLayout>