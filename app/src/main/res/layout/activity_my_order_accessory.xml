<?xml version="1.0" encoding="utf-8"?>
<!--用品-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/window_color">
    <View
        android:id="@+id/myorder_accessory_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_margin_big_16"
        android:background="@color/divider_line_bg"/>
    <RelativeLayout
        android:id="@+id/myorder_accessory_divider_rly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/myorder_accessory_divider_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_toLeftOf="@+id/myorder_accessory_orderState"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myorder_accessory_shopaddress"
                style="@style/BlackText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_shop"
                android:drawablePadding="8dp"
                android:textStyle="bold"
                tools:text="武汉星威奔驰"/>
        </LinearLayout>
        <TextView
            android:id="@+id/myorder_accessory_orderState"
            style="@style/RedText12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:textSize="@dimen/text_size_12"
            tools:text="待支付"/>
    </RelativeLayout>
    <View android:id="@+id/myorder_accessory_line"
        style="@style/UnderLine"
        android:layout_below="@+id/myorder_accessory_divider_rly"/>
    <com.hxqc.widget.ListViewNoSlide
        android:id="@+id/myorder_accessory_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myorder_accessory_line"
        android:layout_margin="@dimen/margin_10"
        android:listSelector="@color/transparent"
        />
    <View android:id="@+id/myorder_accessory_line2"
        style="@style/UnderLine"
        android:layout_below="@+id/myorder_accessory_item"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myorder_accessory_line2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/myorder_accessory_orderTotal"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="共*件商品"/>
            <TextView
                android:id="@+id/myorder_accessory_orderDeposit"
                style="@style/PriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="支付订金：¥175.00"/>
        </LinearLayout>
        <Button
            android:id="@+id/myorder_accessory_but"
            style="@style/btn_orange"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:text="去付款"
            android:textSize="13sp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/myorder_accessory_verify_Complete"
            style="@style/btn_orange"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:text="确认收货"
            android:textSize="13sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/myorder_accessory_refundStatusText"
            style="@style/RedText12"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            tools:text="退款完成"/>
    </RelativeLayout>

</RelativeLayout>
