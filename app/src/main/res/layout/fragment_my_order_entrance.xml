<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/toolbar_background">

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:padding="15dp"
            android:src="@drawable/screen"
             />
    </android.support.v7.widget.Toolbar>

    <net.simonvt.menudrawer.OverlayDrawer
        android:id="@+id/myorder_drawer"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:mdContentBackground="@color/window_color"
        app:mdDrawOverlay="true"
        app:mdDropShadowColor="#55000000"
        app:mdDropShadowEnabled="true"
        app:mdDropShadowSize="100dp"
        app:mdPosition="top">
        <FrameLayout
            android:id="@id/mdContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_bg"
            android:orientation="vertical">
            <fragment
                android:id="@+id/myorder_fragment"
                android:name="com.hxqc.mall.fragment.order.MyOrderListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@id/mdMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">
            <ListView
                android:id="@+id/myorder_pop_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>
    </net.simonvt.menudrawer.OverlayDrawer>
</RelativeLayout>
