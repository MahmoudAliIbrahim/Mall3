<?xml version="1.0" encoding="utf-8"?>
<!--4S店特价车-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/window_color"
              android:orientation="vertical">

    <View
        android:id="@+id/myorder_seckill_divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_margin_big_16"
        android:background="@color/tag_background" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/myorder_seckill_divider_line">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_toLeftOf="@+id/myorder_seckill_orderState"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/myorder_seckill_shopaddress"
                style="@style/BlackText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_shop"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_list_arrow"
                android:textStyle="bold"
                tools:text="武汉星威奔驰"/>
        </LinearLayout>
        <TextView
            android:id="@+id/myorder_seckill_orderState"
            style="@style/RedText12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:textSize="@dimen/text_size_12"
            tools:text="待支付"/>
    </RelativeLayout>
    <View style="@style/UnderLine" />
    <com.hxqc.mall.core.views.Order.OrderDescription
        android:id="@+id/myorder_seckill_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_padding_big_16"/>

    <View style="@style/UnderLine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <TextView
            android:id="@+id/myorder_seckill_orderPrice"
            style="@style/PriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            tools:text="订金：¥175.00"/>
        <Button
            android:id="@+id/myorder_seckill_but"
            style="@style/btn_orange"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:text="去付款"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/myorder_seckill_refundStatusText"
            style="@style/RedText12"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/normal_margin_big_16"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            tools:text="待退款"/>
    </RelativeLayout>
</LinearLayout>
