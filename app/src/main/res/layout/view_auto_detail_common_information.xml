<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f4e9"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:paddingLeft="@dimen/activity_horizontal_margin_16"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/auto_detail_price"
                style="@style/RedText20"
                android:layout_width="@dimen/common_info_l1_width"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="20.20万"/>

            <TextView
                android:id="@+id/auto_detail_subscription"
                style="@style/RedText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="订金:2000.20元"/>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/auto_detail_price_cut_notification"
            android:background="#EDE6D3"/>

        <TextView
            android:id="@+id/auto_detail_price_cut_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:text="降价通知"
            android:textColor="@color/can_click"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDE6D3"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin_16"
        android:paddingRight="@dimen/activity_horizontal_margin_16">

        <LinearLayout
            android:layout_width="@dimen/common_info_l1_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厂家指导价："/>

            <TextView
                android:id="@+id/auto_detail_original_price"
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/straight_matter_and_secondary_text"
                android:textStyle="bold"
                tools:text="30.9万"/>
        </LinearLayout>

        <TextView
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="直降:"/>

        <TextView
            android:id="@+id/auto_detail_fall"
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:drawableRight="@drawable/ic_arrow_depreciate"
            android:textStyle="bold"
            tools:text="1.8万"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:paddingLeft="@dimen/activity_horizontal_margin_16"
        android:paddingRight="@dimen/activity_horizontal_margin_16">

        <LinearLayout
            android:layout_width="@dimen/common_info_l1_width"
            android:layout_height="wrap_content">

            <TextView
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="库存:"/>

            <TextView
                android:id="@+id/auto_detail_inventory"
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="33辆"/>
        </LinearLayout>

        <TextView
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已售:"/>

        <TextView
            android:id="@+id/auto_detail_sales"
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="33辆"/>

    </LinearLayout>


</LinearLayout>
