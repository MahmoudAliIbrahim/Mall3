<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="58dp"
    android:minHeight="58dp">

    <ImageView
        android:id="@+id/iv_bank_logo"
        android:layout_width="@dimen/icon_size_32"
        android:layout_height="@dimen/icon_size_32"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_pay_method"
        android:layout_toRightOf="@+id/iv_bank_logo"
        android:layout_toEndOf="@+id/iv_bank_logo"
        style="@style/BlackText14"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin_small_8"
        android:layout_marginStart="@dimen/normal_margin_small_8"
        tools:text="余额结算" />

    <TextView
        android:id="@+id/balance_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#a6a6a6"
        android:textSize="@dimen/main_font_size"
        tools:text="余额：¥ 2000"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"/>

</RelativeLayout>
