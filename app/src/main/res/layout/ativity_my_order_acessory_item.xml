<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/myorder_aessory_item_imge"
            android:layout_width="76dp"
            android:layout_height="76dp"
            tools:src="@drawable/pic_normal"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10"
            >
            <TextView
                android:id="@+id/myorder_aessory_item_name"
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试车载座式香水测试"/>
            <LinearLayout
                android:id="@+id/myorder_aessory_item_refund_lly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/myorder_aessory_item_rly"
                android:layout_marginBottom="2dp"
                android:gravity="right">
                <TextView
                    android:id="@+id/myorder_aessory_item_refund_status"
                    style="@style/RedText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_10"
                    tools:text="待退款"/>

                <TextView
                    android:id="@+id/myorder_aessory_item_refund_num"
                    style="@style/RedText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="退款数量：2"/>
            </LinearLayout>
          <RelativeLayout
              android:id="@+id/myorder_aessory_item_rly"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true">
              <TextView
                  android:id="@+id/myorder_aessory_item_pic"
                  style="@style/PriceText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  tools:text="¥175.00"/>
              <TextView
                  android:id="@+id/myorder_aessory_item_productNum"
                  style="@style/GrayText14"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  tools:text="商品数量：2"/>
          </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>