<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:padding="16dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/car_ico"
            android:layout_width="@dimen/app_item_auto_image_width_96"
            android:layout_height="@dimen/app_item_auto_image_height_55"
            android:background="@drawable/pic_normal_square"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/car_name"
                style="@style/BlackText14"
                android:textStyle="bold"
                tools:text="本田XR—V  2015款  1.8L EXiCVT 舒适版"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:text="特价：  "
                    />

                <TextView
                    android:id="@+id/car_price"
                    style="@style/RedText13"
                    android:textStyle="bold"
                    tools:text="28.60万元"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:text="厂商指导价：  "
                    />

                <TextView
                    android:id="@+id/car_TotalPrice"
                    style="@style/GrayText13"
                    android:textStyle="bold"
                    tools:text="48.90万元"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:text="纯电续航：  "
                    />

                <TextView
                    android:id="@+id/car_batteryLife"
                    style="@style/GrayText13"
                    android:textStyle="bold"
                    tools:text="400公里"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_gravity="bottom"
                android:layout_marginTop="21dp"
                android:background="@color/gray_yjf"
                android:visibility="gone"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
