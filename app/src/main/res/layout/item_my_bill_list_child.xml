<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_with_bottom_line"
    android:padding="@dimen/normal_padding_big_16">

    <TextView
        android:id="@+id/bill_number"
        style="@style/OrangeText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        android:text="@string/get"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bill_date"
        style="@style/GrayText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="2015-02-02 18:65" />

    <TextView
        android:id="@+id/bill_description"
        style="@style/BlackText14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bill_number"
        android:maxLines="2"
        tools:text="现金充值" />

</RelativeLayout>