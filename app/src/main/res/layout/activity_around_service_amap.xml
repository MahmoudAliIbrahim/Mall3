<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amap.api.maps.MapView
        android:id="@+id/around_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
    
    <ImageButton
        android:id="@+id/around_map_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/around_map_back"
    />
    
    <ImageButton
        android:id="@+id/around_map_reloc"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/around_map_reloc"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
    >
        <LinearLayout
            android:id="@+id/map_sidle_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent"
            />
        <!--<CheckBox-->
            <!--android:id="@+id/around_map_gas"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="@null"-->
            <!--android:button="@drawable/bg_map_around_gas_selecter"-->
        <!--/>-->

        <!--<CheckBox-->
            <!--android:id="@+id/around_map_park"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:background="@null"-->
            <!--android:button="@drawable/bg_map_around_park_selecter"-->
        <!--/>-->

        <CheckBox
            android:id="@+id/around_map_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:button="@drawable/bg_map_around_road_selecter"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:orientation="vertical"
    >

        <ImageButton
            android:id="@+id/around_map_increase"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_map_around_increase_selecter"
        />

        <ImageButton
            android:id="@+id/around_map_reduce"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_map_around_reduce_selecter"
        />

    </LinearLayout>




</RelativeLayout>
