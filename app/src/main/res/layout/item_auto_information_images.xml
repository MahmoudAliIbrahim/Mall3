<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/item_padding_bottom_15">

    <TextView
        android:id="@+id/group_title"
        style="@style/BlackText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_marginTop="@dimen/margin_16"
        android:text="精选推荐"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/imgs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_title"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_auto_info_item_image"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_license" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_auto_info_item_image"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_license" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_6"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/height_auto_info_item_image"
            android:scaleType="fitXY"
            tools:src="@drawable/ic_license" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_title"
        style="@style/BlackText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgs_layout"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#2a2a2a"
        tools:text="居家兼运动 新阿特兹等4款中级车推荐" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_type"
            style="@style/GrayText13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            tools:text="导购推荐" />


        <TextView
            android:id="@+id/item_date"
            style="@style/GrayText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="08月30日" />
    </LinearLayout>
</RelativeLayout>