<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/view_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:background="@color/cursor_orange"
    android:gravity="center"
    android:onClick="openBuyVerify"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    tools:showIn="@layout/layout_auto_item_common_bottom_bar">


    <TextView
        android:id="@+id/buy_des"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="@string/buy_it_now"
        android:textColor="#fff"
        android:textSize="16sp"/>
</LinearLayout>
