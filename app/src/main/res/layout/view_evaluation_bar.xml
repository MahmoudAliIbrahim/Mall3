<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_padding_8"
        android:paddingLeft="@dimen/normal_padding_16"
        android:paddingRight="12dp"
        android:paddingTop="@dimen/item_padding_8">

        <TextView
            android:id="@+id/evaluation_bar_input"
            style="@style/RedText14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/evaluation" />

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/evaluation_bar_message"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pinglun" />

            <com.hxqc.mall.core.views.autotext.AutofitTextView
                android:id="@+id/evaluation_count"
                android:layout_width="@dimen/normal_size_10"
                android:layout_height="@dimen/normal_size_10"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_round_red"
                android:gravity="center"
                android:lines="1"
                android:text="99"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/text_size_8"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/evaluation_bar_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/normal_size_5"
            android:src="@drawable/ic_zhuanfa" />
    </LinearLayout>
</RelativeLayout>