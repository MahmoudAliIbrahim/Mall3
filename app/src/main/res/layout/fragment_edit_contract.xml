<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
    >

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        tools:context="com.hxqc.pay.fragment.OrderStep1EditContractFragment">

        <!--用户名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_label_username"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="@dimen/main_font_size"/>

            <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                android:id="@+id/et_username"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:hint="@string/et_hint_username"
                android:maxLines="1"
                android:textSize="@dimen/main_font_size"
                android:maxLength="20"
                />

        </LinearLayout>

        <!--联系方式-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_label_phone"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="@dimen/main_font_size"/>

            <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                android:id="@+id/et_phone"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:hint="@string/et_hint_phone"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="11"
                android:textSize="@dimen/main_font_size"/>

        </LinearLayout>

        <!--证件-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/tv_label_id"
                android:textColor="@color/background_floating_material_dark"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/main_font_size"/>

            <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                android:id="@+id/et_id"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:hint="@string/et_hint_id"
                android:maxLines="1"
                android:maxLength="18"
                android:textSize="@dimen/main_font_size"/>

        </LinearLayout>

        <!--所在城市区县-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_label_city"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="@dimen/main_font_size"/>

            <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                android:id="@+id/et_city"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:drawableEnd="@drawable/ic_list_arrow"
                android:drawableRight="@drawable/ic_list_arrow"
                android:focusable="false"
                android:hint="@string/et_hint_city"
                android:maxLines="1"
                android:textSize="@dimen/main_font_size"/>

        </LinearLayout>

        <!--详细地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tv_label_address"
                android:textColor="@color/background_floating_material_dark"
                android:textSize="@dimen/main_font_size"/>

            <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                android:id="@+id/et_address"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:hint="@string/et_hint_address"
                android:maxLines="5"
                android:maxLength="60"
                android:textSize="@dimen/main_font_size"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_contract"
            style="@style/btn_orange"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:text="@string/btn_get_cont"
            />

        <TextView
            android:id="@+id/tv_preview_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp"
            android:text="@string/tv_preview_cont"
            android:textColor="#2196f1"
            android:textSize="@dimen/btn_font_size"/>

    </LinearLayout>

</ScrollView>
