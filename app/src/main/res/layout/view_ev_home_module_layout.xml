<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_marginTop="16dp"
              android:background="#FFFFFF"
              android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView android:layout_marginTop="12dp"
            android:id="@+id/ev_home_module_title"
            style="@style/RedText16"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            />

        <TextView  android:paddingTop="12dp" android:paddingRight="16dp"
            android:id="@+id/ev_home_module_more"
            style="@style/BlackText14"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/more_ico"
            android:text="更多"
            android:textColor="#333333"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ev_home_module_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>

</LinearLayout>
