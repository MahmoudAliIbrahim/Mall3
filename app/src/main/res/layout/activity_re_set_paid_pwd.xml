<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/pay_pwd_new_pwd"
            android:textColor="@color/title_and_main_text"
            android:textSize="14sp"/>



            <com.hxqc.mall.core.views.materialedittext.pwd.MaterialPWDEditText
                android:id="@+id/input_new_pwd"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="请输入支付密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="13sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/pay_pwd_new_confirm_pwd"
            android:textColor="@color/title_and_main_text"
            android:textSize="14sp"/>



            <com.hxqc.mall.core.views.materialedittext.pwd.MaterialPWDEditText
                android:id="@+id/confirm_new_pwd"
                android:hint="请再次输入密码"
                style="@style/MaterialEditText"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textSize="13sp"/>


    </LinearLayout>

    <Button
        android:id="@+id/set_new_pwd"
        style="@style/btn_orange"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="@string/pay_pwd_reset_pwd_finish"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
    >

        <include
            layout="@layout/keyboard_view_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            />

    </RelativeLayout>

</LinearLayout>
