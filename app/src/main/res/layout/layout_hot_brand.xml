<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:orientation="vertical"
    >

    <TextView
        style="@style/GrayText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="@dimen/item_padding_16"
        android:paddingTop="@dimen/item_padding_16"
        android:text="热门品牌"/>

    <LinearLayout
        android:id="@+id/hot_brand_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="8dp"
        android:orientation="horizontal"
        android:padding="@dimen/item_padding_16"
        android:showDividers="middle"/>

    <View style="@style/UnderLine"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#EFEFEF"/>

    <View style="@style/UnderLine"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/filter_action"
            style="@style/BlackText16"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/ic_newcars_list"
            android:drawablePadding="@dimen/item_padding_16"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/item_padding_16"
            android:text="按条件找车"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_16"
            android:background="@drawable/ic_list_arrow"/>
    </RelativeLayout>


    <View style="@style/UnderLine"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#EFEFEF"/>

    <!--<View style="@style/UnderLine"/>-->
</LinearLayout>
