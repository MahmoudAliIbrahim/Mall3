<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="121dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shop_name"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="武汉星威奔驰呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵"/>

            <TextView
                android:id="@+id/shop_distance"
                style="@style/WhiteText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/list_btn_bg"
                android:gravity="center"
                android:maxLines="1"
                tools:text="1.288888888888888km"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="12sp"
            tools:text="地址: 奔驰SLK级优惠高达8万 欢迎垂询"/>

        <LinearLayout
            android:id="@+id/goThereButton"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/go_there_view_bg">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/goto_there_bg"/>

            <TextView
                style="@style/WhiteText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="到这去"/>
        </LinearLayout>

        <!--<Button-->
            <!--android:id="@+id/goThereButton"-->
            <!--android:layout_width="85dp"-->
            <!--android:layout_height="28dp"-->
            <!--android:gravity="center"-->
            <!--android:background="@drawable/go_there_view_bg"-->
            <!--android:text="到这去"/>-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:background="#F5F5F5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"/>
    </LinearLayout>
</LinearLayout>