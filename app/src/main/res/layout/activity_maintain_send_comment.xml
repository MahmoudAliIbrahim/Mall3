<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hxqc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_send_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/send_comment_userPic"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/pic_normal"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:background="@drawable/bg_edittext_focused">

                    <com.hxqc.mall.core.views.materialedittext.MaterialEditText
                        android:id="@+id/met_write_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="65dp"
                        android:hint="请留下您的评价,可以为其他伙伴提供参考"
                        android:textCursorDrawable="@drawable/edittext_cursor"
                        android:gravity="top"
                        android:background="@null"
                        style="@style/BlackText14"
                        android:textColorHint="#989898"
                        hxqc:maxCharacters="200"
                        hxqc:baseColor="@color/transparent"
                        hxqc:primaryColor="@color/transparent"
                        />
                </LinearLayout>
            </LinearLayout>
            <com.hxqc.widget.GridViewNoSlide
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:horizontalSpacing="6dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:verticalSpacing="6dp" />
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BlackText14"
                android:text="店铺评分"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/GrayText14"
                    android:text="技术相符"/>
                <com.hxqc.mall.comment.view.MyRatingBarView
                    android:id="@+id/mrbv_press_star_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hxqc:starImageSize="32dp"
                    hxqc:starCount="5"
                    hxqc:starEmpty="@drawable/ic_score_normal"
                    hxqc:starFill="@drawable/ic_score_selected"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/GrayText14"
                    android:text="服务相符"/>
                <com.hxqc.mall.comment.view.MyRatingBarView
                    android:id="@+id/mrbv_press_star_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hxqc:starImageSize="32dp"
                    hxqc:starCount="5"
                    hxqc:starEmpty="@drawable/ic_score_normal"
                    hxqc:starFill="@drawable/ic_score_selected"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/GrayText14"
                    android:text="环境相符"/>
                <com.hxqc.mall.comment.view.MyRatingBarView
                    android:id="@+id/mrbv_press_star_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    hxqc:starImageSize="32dp"
                    hxqc:starCount="5"
                    hxqc:starEmpty="@drawable/ic_score_normal"
                    hxqc:starFill="@drawable/ic_score_selected"
                    android:layout_marginLeft="30dp"
                    />
            </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/but_send_comment"
                style="@style/btn_orange"
                android:layout_width="120dp"
                android:layout_margin="@dimen/margin_16"
                android:layout_gravity="right"
                android:text="发表评价"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
