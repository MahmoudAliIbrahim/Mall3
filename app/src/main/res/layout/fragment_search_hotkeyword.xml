<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_hot"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:text="热门搜索"
        android:textColor="@color/title_and_main_text"
        android:textSize="18sp" />

    <com.hxqc.mall.core.views.MultipleTextView
        android:id="@+id/search_hot_keywords_multiple_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:textLineMargin="4dp"
        app:textWordMargin="4dp" />
</LinearLayout>
