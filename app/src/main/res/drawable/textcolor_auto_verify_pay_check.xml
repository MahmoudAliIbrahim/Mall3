<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="#ffffff" android:state_checked="true" android:state_focused="false"/>
    <!-- Non focused states -->
    <item android:color="#6E6E6E" android:state_focused="false" android:state_pressed="false" android:state_selected="false"/>
    <item android:color="#ffffff" android:state_focused="false" android:state_pressed="false" android:state_selected="true"/>
    <!-- Focused states -->
    <item android:color="#6E6E6E" android:state_focused="true" android:state_pressed="false" android:state_selected="false"/>
    <item android:color="#ffffff" android:state_focused="true" android:state_pressed="false" android:state_selected="true"/>
    <!-- Pressed -->
    <!--<item android:color="#7d7d7d" android:state_pressed="true" android:state_selected="true"/>-->

    <item android:color="#6E6E6E" android:state_checked="true" android:state_pressed="true"/>
    <item android:color="#ffffff" android:state_checked="false" android:state_pressed="true"/>

</selector>
