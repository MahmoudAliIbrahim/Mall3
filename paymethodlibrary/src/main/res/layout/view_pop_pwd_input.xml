<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>

    <View
        android:id="@+id/bg_click_pwd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a50d0e0e"
    />


    <RelativeLayout
        android:id="@+id/pwd_frame"
        android:layout_width="254dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="130dp"
        android:background="#fff"
    >

        <ImageView
            android:id="@+id/iv_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_balance_close"
        />


        <TextView
            android:id="@+id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/balance_input_title"
            android:textColor="#000"
            android:textSize="14sp"
        />


        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/balance_title"
            android:layout_marginBottom="10dp"
            android:background="#d5d5d5"/>


        <TextView
            android:id="@+id/tv_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider1"
            android:layout_centerHorizontal="true"
            android:text="@string/balance_input_label"
            android:textColor="#ca000000"
            android:textSize="14sp"
        />

        <TextView
            android:id="@+id/pwd_input_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_label1"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textSize="28sp"
        />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pwd_input_money"
            android:layout_marginTop="14dp"
            android:background="#d5d5d5"/>

        <com.hxqc.mall.paymethodlibrary.view.input.PwdEditText
            android:id="@+id/pet_pwd"
            android:layout_width="247dp"
            android:layout_height="43dp"
            android:layout_below="@+id/divider"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:enabled="true"
            android:focusable="true"
            android:inputType="number"
            android:maxLength="6"
        />

    </RelativeLayout>


    <com.hxqc.mall.paymethodlibrary.view.input.PayNumberKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="1dp"
    />

</RelativeLayout>
