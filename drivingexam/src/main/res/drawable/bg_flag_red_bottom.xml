<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
<!-- 连框颜色值 -->
<item> 
      <shape> 
            <corners    
           android:topLeftRadius="0dp"
        android:bottomLeftRadius="0dp"     
          android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"  
         
         />
            <solid android:color="#00000000" />   <!--  边框颜色-->
      </shape> 
</item> 
<!-- 主体背景颜色值 -->
<item android:top="-3.5dp"   android:bottom="0dp" android:left="-3.5dp"  android:right="-3.5dp">
     <shape> 
         <stroke android:width="2.5dp" android:color="@color/text_color_orange"/>
           <corners    
                  android:topLeftRadius="0dp"
        android:bottomLeftRadius="0dp"     
          android:topRightRadius="0dp"
        android:bottomRightRadius="0dp"    
         />
           <solid android:color="#00000000" /> <!--  主体颜色-->
           
           <padding android:bottom="0dp"
           		android:left="0dp"
           		android:right="0dp"
           		android:top="0dp" />
     </shape>     
</item>
</layer-list>