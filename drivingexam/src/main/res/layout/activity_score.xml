<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/toolbar_background">

        <ImageView
            android:id="@+id/goback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/btn_click_transfor_bg"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:gravity="center"
            android:text="查看成绩"
            android:textColor="#fff"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/level"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/no_user" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/level"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/top_2"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="6dp"
            android:text="马路杀手"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:text="匿名用户"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/kemu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_line_round_corner_red"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="小车：科目一"
        android:textColor="@color/font_red"
        android:textSize="17sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/divide"
        android:layout_below="@+id/kemu"
        android:layout_toLeftOf="@+id/divide">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="得分"
            android:textColor="#333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="88"
            android:textColor="@color/orange"
            android:textSize="66sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/score"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/score"
            android:text="分"
            android:textColor="#888"
            android:textSize="17sp" />

    </RelativeLayout>

    <View
        android:id="@+id/divide"
        android:layout_width="1dp"
        android:layout_height="90dp"
        android:layout_below="@+id/kemu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="#dedede" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/divide"
        android:layout_below="@+id/kemu"
        android:layout_toRightOf="@+id/divide">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="用时"
            android:textColor="#333"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="25dp"
                android:text="39"
                android:textColor="#53A2FB"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/time"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/score"
                android:text="分"
                android:textColor="#888"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="13"
                android:textColor="#53A2FB"
                android:textSize="42sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sec"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="25dp"
                android:text="秒"
                android:textColor="#888"
                android:textSize="17sp" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/see_wrong_subject"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/divide"
        android:layout_marginRight="10dp"
        android:layout_marginTop="45dp"
        android:layout_toLeftOf="@+id/divide"
        android:background="@drawable/btn_round_corner_blue"
        android:drawableLeft="@drawable/search_exm"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:text="只看错题"
        android:textColor="#fff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/try_again"
        style="@style/btn_orange"
        android:layout_below="@+id/divide"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/divide"
        android:drawableLeft="@drawable/shuaxin"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:text="再试一次"
        android:textColor="#fff"
        android:textSize="17sp" />


</RelativeLayout>