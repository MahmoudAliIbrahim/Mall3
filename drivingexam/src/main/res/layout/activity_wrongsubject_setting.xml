<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <com.hxqc.mall.core.views.CustomToolBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/toolbar_background" />

    <RelativeLayout
        android:id="@+id/active_lay"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/btn_click_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btsetting_img2"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="gone"


            />

        <CheckBox
            android:id="@+id/remove_wrong_cb"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/check_box_select"
            android:checked="true"
            android:button="@null"
            android:gravity="center" />


        <TextView
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="答对后自动移除错题"
            android:textColor="#333"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#dedede" />
    </RelativeLayout>


</LinearLayout>