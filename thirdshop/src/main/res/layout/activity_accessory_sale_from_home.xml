<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/accessory_sale_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <TextView
            android:id="@+id/accessory_sale_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/t_icon_button_location"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="@dimen/text_size_16" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 用品列表 -->
        <FrameLayout
            android:id="@+id/accessory_sale_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 遮罩 -->
            <View
                android:id="@+id/accessory_sale_shade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                android:background="#55000000"
                android:visibility="gone" />

            <!-- 筛选条 -->
            <com.hxqc.mall.thirdshop.accessory4s.views.FilterTipFromHomeView
                android:id="@+id/accessory_sale_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
