<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="16dp"
    android:paddingTop="6dp">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="98dp"
        android:background="@drawable/t_img_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/service_advisor_icon"
            android:layout_width="@dimen/service_advisor_list_height"
            android:layout_height="@dimen/service_advisor_list_height"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/service_advisor_list_height"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/service_advisor_name"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                tools:text="李烽" />

            <TextView
                android:id="@+id/service_advisor_occupation"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                tools:text="接待顾问" />

            <TextView
                android:id="@+id/service_advisor_specialty"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:visibility="gone"
                tools:text="常规故障排除" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
