<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal"
>

    <TextView
        style="@style/GrayText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_sales_p_post_time"
        android:visibility="gone"
    />

    <TextView
        android:id="@+id/tv_s_p_post_time"
        style="@style/GrayText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2010-44-00"
    />

    <TextView
        android:id="@+id/sales_p_label_tips"
        style="@style/GrayText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/t_sales_p_deadline_time"
    />

    <TextView
        android:id="@+id/tv_s_p_deadline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_red"
        android:textSize="10sp"
        tools:text="37"
    />

    <TextView
        android:id="@+id/tv_s_p_tips_end"
        style="@style/GrayText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="å¤©"
    />

</LinearLayout>
