                <!--android:paddingTop="8dp"-->
                <!--android:text="车辆价格随时变动，敬请关注当地市场"-->
                <!--/>-->


            </LinearLayout>

            <com.hxqc.mall.thirdshop.views.InfoIntroduceView
                android:id="@+id/v_car_img_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tf_2"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="16dp"
            />

            <TextView
                android:id="@+id/tv_s_bottom_info"
                style="@style/GrayText12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_car_img_info"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="16dp"
                tools:text="以上为车型资料信息，本店提供了很多附加增值性服务，感兴趣的朋友欢迎咨询本店咨询箱子信息。"
            />

            <TextView
                android:id="@+id/tv_s_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_s_bottom_info"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_sales_textview_red"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:text="@string/t_test_disclaimer"
                android:textColor="#e02c36"
                android:textSize="12sp"
            />


            <LinearLayout
                android:id="@+id/function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_s_disclaimer"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:paddingBottom="16dp">

                <Button
                    android:id="@+id/tv_s_ask_price"
                    style="@style/btn_orange"
                    android:layout_width="0dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t_ask_price"
                />

                <Button
                    android:id="@+id/tv_s_order_driver"
                    style="@style/btn_orange"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t_order_driver"
                />


            </LinearLayout>

            <include
                android:id="@+id/shop_detail"
                android:layout_below="@+id/function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                layout="@layout/t_item_p_detail_shop_piece"/>

            <View
                android:layout_below="@+id/shop_detail"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/white"
                />
        </RelativeLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/bottom_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
    >


        <com.hxqc.mall.thirdshop.views.CallBar
            android:id="@+id/call_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />


        <!--底部按钮-->
        <RelativeLayout
            android:id="@+id/rl_sales_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff"
        >

            <TextView
                android:id="@+id/tv_s_p_detail_notify_pay"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="2dp"
                android:text="@string/t_spd_deposit_notify"
            />

            <Button
                android:id="@+id/btn_deposit_pay"
                style="@style/btn_orange"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="14dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_s_p_detail_notify_pay"
                android:layout_toRightOf="@+id/tv_s_p_detail_notify_pay"
                android:clickable="true"
                android:gravity="center"
                android:onClick="depositPay"
                android:padding="4dp"
                android:text="@string/t_spd_deposit_pay"
                android:textStyle="bold"
            />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
