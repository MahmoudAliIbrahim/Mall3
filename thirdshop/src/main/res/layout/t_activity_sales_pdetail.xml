                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="1dp"-->
                <!--android:layout_marginLeft="1dp"-->
                <!--android:layout_marginRight="1dp"-->
                <!--android:background="@color/white"-->
                <!--/>-->

                <!--<TextView-->
                <!--style="@style/GrayText12"-->
