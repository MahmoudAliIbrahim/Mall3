<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/adviser_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/pic_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_marginStart="@dimen/margin_12"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/adviser_name"
                    style="@style/BlackText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    tools:text="姓名：王明" />

                <TextView
                    android:id="@+id/adviser_post"
                    style="@style/BlackText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    tools:text="岗位：售后服务顾问" />

                <TextView
                    style="@style/BlackText14"
                    android:id="@+id/adviser_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="咨询电话：8888888" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adviser_experience"
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:ems="12"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:lineSpacingMultiplier="1.5"
            tools:text="工作经历：工作经历工作经历工作经历工作经历工作经历工作经历工工作经历工作经历工作经历工作经历工作经历" />

        <TextView
            android:id="@+id/adviser_skill"
            style="@style/GrayText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="12"
            android:lineSpacingMultiplier="1.5"
            android:visibility="gone"
            tools:text="" />

        <TextView
            android:id="@+id/adviser_motto"
            style="@style/GrayText14"
            android:ems="12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            tools:text="工作格言：工作格言工作格言工作格言工作格言工作格言工作格言工作格言工作格言工作格言工作格言工作格言工作格言" />
    </LinearLayout>
</LinearLayout>