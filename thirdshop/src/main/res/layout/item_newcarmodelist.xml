<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_click_style"
    android:orientation="vertical">

    <TextView
        android:id="@+id/car_title"
        style="@style/BlackText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="奔驰(进口)GLA 2015款 220 4MATIC 时尚型"/>


    <RelativeLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/car_title"
        android:orientation="horizontal">

        <TextView
            style="@style/GrayText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="经销商参考价:" />

        <TextView
            android:id="@+id/car_content_1"
            style="@style/RedText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginRight="4dp"
            tools:text="7.8万"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay1"
        android:orientation="horizontal">

        <TextView
            style="@style/GrayText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="@string/itemOrigPrice" />

        <TextView
            android:id="@+id/car_content_4"
            style="@style/GrayText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_centerVertical="true"
            tools:text="37.9万"/>

        <ImageView
            android:id="@+id/show_price_popupView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/car_content_4"
            android:clickable="true"
            android:padding="8dp"
            android:src="@drawable/ic_table"/>

    </RelativeLayout>

    <Button
        android:id="@+id/ask_price"
        style="@style/btn_orange"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/lay2"
        android:layout_marginRight="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginBottom="6dp"
        android:textColor="#fff"
        android:textSize="14sp"
        android:text="询价" />


    <View
        android:layout_marginTop="14dp"
        android:layout_below="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dedede" />
</RelativeLayout>