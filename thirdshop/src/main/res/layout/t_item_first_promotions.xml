<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/promotion_item_padding_6"
    android:paddingLeft="@dimen/normal_margin_big_16"
    android:paddingRight="@dimen/normal_margin_big_16"
    android:paddingTop="@dimen/promotion_item_padding_6">

    <ImageView
        android:id="@+id/promotions_item_pic"
        android:layout_width="@dimen/promotion_pic_width"
        android:layout_height="@dimen/promotion_pic_height"
        android:scaleType="fitXY"
        tools:src="@drawable/pic_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/promotion_item_margin_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/promotions_item_title"
            style="@style/BlackText15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            tools:text="测试促销标题" />

        <TextView
            android:id="@+id/promotions_item_date"
            style="@style/GrayText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            tools:text="2011.11.11" />
    </LinearLayout>
</LinearLayout>