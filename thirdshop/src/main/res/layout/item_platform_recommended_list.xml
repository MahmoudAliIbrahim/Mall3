<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/index"
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_10"
            tools:text="1." />

        <TextView
            android:id="@+id/program_title"
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/program_detail"
            android:layout_alignStart="@+id/program_detail"
            android:layout_alignTop="@+id/index"
            android:layout_marginBottom="@dimen/margin_6"
            android:ellipsize="end"
            android:lines="1"
            tools:text="机油 5.0L" />

        <TextView
            android:id="@+id/program_detail"
            style="@style/GrayText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/program_title"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_6"
            android:layout_toEndOf="@+id/index"
            android:layout_toRightOf="@+id/index"
            android:lines="1"
            tools:text="原厂件原厂件原厂件原厂件原厂件原厂件原厂件" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_partners_title"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:text="工时费" />

            <TextView
                android:id="@+id/program_partners"
                style="@style/RedText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_10"
                android:minEms="4"
                tools:text="$ 11.00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_6"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_materials_title"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料费" />

            <TextView
                android:id="@+id/program_materials"
                style="@style/RedText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:minEms="4"
                tools:text="$ 1111.00" />
        </LinearLayout>


    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="@drawable/ic_home_line" />-->
</LinearLayout>