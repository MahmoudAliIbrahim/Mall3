<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/t_orders_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e8e8"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/t_spd_deposit_notify_top"
                android:textColor="#3abb3e"
                android:textSize="@dimen/text_size_16"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/about_us_margin_top_10"
                android:drawableLeft="@drawable/icon_shop_number_two"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_shop_number_two"
                android:text="@string/t_spd_deposit_tips1"
                android:textColor="#999999"
                android:textSize="10sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:drawableLeft="@drawable/icon_shop_number_one"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/icon_shop_number_one"
                android:text="@string/t_spd_deposit_tips2"
                android:textColor="#999999"
                android:textSize="10sp"
                />

            <TextView
                android:id="@+id/t_show_order_id"
                style="@style/BlackText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/about_us_margin_top_10"
                tools:text="hehda"
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>