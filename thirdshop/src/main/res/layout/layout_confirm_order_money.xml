<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical"
    android:padding="@dimen/margin_16">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text1"
            style="@style/GrayText14"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="配件总额:" />

        <TextView
            android:id="@+id/accessory"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ 361.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text2"
            style="@style/GrayText14"
            android:text="工时总额:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/labor_hour"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ 36.00" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text3"
            style="@style/GrayText14"
            android:text="应付总额:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/payable"
            style="@style/RedText14"
           android:layout_gravity="right"
            tools:text="￥ 336.00" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/scores_money"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text5"
            style="@style/GrayText14"
            android:text="积分抵扣:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/points_discount"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ -36.00" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/package_money"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text7"
            style="@style/GrayText14"
            android:text="套餐折扣:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/package_discount"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ -36.00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/coupon_money"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text4"
            style="@style/GrayText14"
            android:text="优惠券折扣:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/coupon_discount_money"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ -36.00" />

    </LinearLayout>


    <View
        android:id="@+id/line2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#D5D5D5"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/text6"
            style="@style/GrayText14"
            android:text="实付金额:"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/pay"
            style="@style/RedText14"
            android:layout_gravity="right"
            tools:text="￥ 1036.00" />

    </LinearLayout>

</LinearLayout>