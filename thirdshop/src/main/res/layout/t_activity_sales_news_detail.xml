<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
>
    <ScrollView
        android:id="@+id/sv_sales_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_16"
        android:layout_above="@+id/call_bar"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_news_detail_title"
                style="@style/BlackText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="12dp"
                android:textColor="@color/title_red"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                tools:text="奔驰A级限时优惠4.5万"
            />

            <LinearLayout
                android:id="@+id/ll_tf_news_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_news_detail_title"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
            >
                <TextView
                    android:id="@+id/tv_news_detail_post_time"
                    style="@style/GrayText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="时间：2015.5.23"
                />

                <TextView
                    android:id="@+id/tv_news_detail_shop_name"
                    style="@style/GrayText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginStart="36dp"
                    tools:text="经销商：武汉星威汽车"
                />

            </LinearLayout>

            <com.hxqc.mall.thirdshop.views.InfoIntroduceView
                android:id="@+id/v_detail_img_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tf_news_1"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="16dp"
            />
            <TextView
                android:id="@+id/tv_s_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_detail_img_info"
                android:layout_margin="@dimen/margin_16"
                android:background="@drawable/bg_sales_textview_red"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:text="@string/t_test_disclaimer"
                android:textColor="#e02c36"
                android:textSize="12sp"
            />
        </RelativeLayout>
    </ScrollView>


    <com.hxqc.mall.thirdshop.views.CallBar
        android:id="@+id/call_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
    />

    <com.hxqc.mall.core.api.RequestFailView
        android:id="@+id/refresh_fail_view"
        xmlns:fail="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        fail:emptyDescription="获取数据失败"/>
</RelativeLayout>
