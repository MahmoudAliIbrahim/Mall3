<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="预约看车"
            android:textColor="#FA713B"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="4dp"
            android:src="@drawable/alert_view_close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#FA713B"/>

        <TextView
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的姓名"/>

        <com.hxqc.mall.core.views.materialedittext.MaterialEditText
            android:id="@+id/user_name"
            style="@style/MaterialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint="请输入您的姓名"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#FA713B"/>

        <TextView
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的电话"/>

        <com.hxqc.mall.core.views.materialedittext.MaterialEditText
            android:id="@+id/user_phone"
            style="@style/MaterialEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:hint="请输入您的手机号码"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:paddingRight="5dp">

        <TextView
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的性别"/>

        <RadioGroup
            android:id="@+id/radiogroup_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:paddingLeft="6dp"
            android:checkedButton="@+id/man">

            <RadioButton
                android:id="@+id/man"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@color/window_color"
                android:button="@drawable/t_third_shop_choose_sex_radiobg"
                android:gravity="right|center_vertical"
                android:text="先生"
                android:textColor="#656565"
                android:textSize="13sp"/>

            <RadioButton
                android:id="@+id/woman"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@color/window_color"
                android:button="@drawable/t_third_shop_choose_sex_radiobg"
                android:gravity="right|center_vertical"
                android:text="女士"
                android:textColor="#656565"
                android:textSize="13sp"/>
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/submit_message"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        style="@style/btn_orange"
        android:text="提交"/>

    <TextView
        android:id="@+id/appoint_tip_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="#787878"
        android:textSize="12sp"
        android:text="@string/appointment_tip_msg"/>
</LinearLayout>