<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_detail_color_group"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp">

    <com.hxqc.mall.core.views.ColorSquare
        android:id="@+id/single_condition_color"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/single_condition_value"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_subheading"
        android:textSize="@dimen/text_size_16" />
</LinearLayout>
