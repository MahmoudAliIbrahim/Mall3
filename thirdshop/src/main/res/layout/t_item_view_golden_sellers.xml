<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/seller_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/window_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/promotion_item_padding_6"
    android:paddingLeft="@dimen/normal_padding_16"
    android:paddingTop="@dimen/promotion_item_padding_6">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/golden_seller_list_item_width"
        android:layout_height="@dimen/golden_seller_list_item_height"
        android:background="@drawable/t_img_bg"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:padding="@dimen/golden_seller_list_item_padding_10">

        <ImageView
            android:id="@+id/seller_icon"
            android:layout_width="@dimen/golden_seller_list_item_icon_height"
            android:layout_height="@dimen/golden_seller_list_item_icon_height"
            android:scaleType="fitXY" />

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/golden_seller_list_item_padding_10"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seller_name"
                style="@style/BlackText15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="名字" />

            <TextView
                android:id="@+id/seller_job_title"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="销售顾问" />

            <TextView
                android:id="@+id/seller_phone_number"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="13999999999" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
