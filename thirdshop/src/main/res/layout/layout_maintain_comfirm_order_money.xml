<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/four_s_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_2"
            android:orientation="vertical">


            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:text="工时总额："/>

            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:text="材料总额："
                android:layout_marginTop="6dp"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/text1"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="订单总额："/>

            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_dashed_line"/>

            <TextView
                android:id="@+id/text_package_discount"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="套餐折扣："/>

            <TextView
                android:id="@+id/text_score"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="积分折扣："/>

            <TextView
                android:id="@+id/text_coupon"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="优惠券折扣："/>

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dashed_line"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/text4"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="实付总额："/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/work_cost"
                style="@style/RedText14"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/goods_cost"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/amount_to_pay"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>
            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_dashed_line"/>

            <TextView
                android:id="@+id/package_discount_money"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/score_discount_money"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/coupon_discount_money"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额" />

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_dashed_line"/>

            <TextView
                android:id="@+id/should_pay"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quick_shop_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_16">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/accessory"
                style="@style/RedText14"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                tools:text="￥ 361.00" />


            <TextView
                android:id="@+id/labor_hour"
                style="@style/RedText14"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                tools:text="￥ 36.00" />


            <TextView
                android:id="@+id/payable"
                style="@style/RedText14"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                tools:text="￥ 336.00" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#D5D5D5"/>

            <TextView
                android:id="@+id/pay"
                style="@style/RedText14"
                android:layout_gravity="right"
                tools:text="￥ 1036.00" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_1"
            android:orientation="vertical">

            <TextView
                style="@style/GrayText14"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:text="配件总额:" />

            <TextView
                style="@style/GrayText14"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="工时总额:" />


            <TextView
                style="@style/GrayText14"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:text="应付总额:" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="#D5D5D5"/>

            <TextView
                android:id="@+id/text6"
                style="@style/GrayText14"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:text="实付金额:" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>