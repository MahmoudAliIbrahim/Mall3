<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:id="@+id/installmentbuycar_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/divider_line_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_16">
        <ImageView
            android:id="@+id/installmentbuycar_item_image"
            android:layout_width="@dimen/app_item_auto_image_width_96"
            android:layout_height="@dimen/app_item_auto_image_height_55"
            tools:src="@drawable/pic_normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:orientation="vertical">
            <TextView
                android:id="@+id/installmentbuycar_item_name"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="凯迪拉克ATSL"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺参考价 : "/>

                <TextView
                    android:id="@+id/installmentbuycar_item_shop_price"
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    tools:text="23-25万"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="厂商指导价 : "/>

                <TextView
                    android:id="@+id/installmentbuycar_item_manufactor_price"
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="23-25万"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首付比例 : "/>

                <TextView
                    android:id="@+id/installmentbuycar_item_downPayments"
                    style="@style/PriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="30%"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/GrayText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分期期数 : "/>

                <TextView
                    android:id="@+id/installmentbuycar_item_stageNumber"
                    style="@style/PriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24期"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/UnderLine" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首付："/>
            <TextView
                style="@style/OrangeText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="￥25万"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/divider_height_1"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/textView2"
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月供："/>

            <TextView
                style="@style/OrangeText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="￥1158/月"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
