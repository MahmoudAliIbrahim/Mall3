<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hxqc.mall.core.views.VariousShowView
        android:id="@+id/accessory_big_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:foldStatus="fold"
        app:labelText="这是第一个测试"
        app:labelTextColor="@color/black"
        app:labelTextSize="15sp"
        app:foldIconRes="@drawable/ic_arrow_down"
        app:unfoldIconRes="@drawable/ic_arrow_top"
        app:leftIcon="@drawable/beauty_cleaning">

        <RelativeLayout
            android:id="@id/VariousShowViewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0F0F0"
            android:paddingBottom="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/item_accessory_goods_category_shadow"/>

            <com.hxqc.widget.GridViewNoSlide
                android:id="@+id/accessory_small_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:numColumns="3"
                android:verticalSpacing="13dp"/>
        </RelativeLayout>
    </com.hxqc.mall.core.views.VariousShowView>
</LinearLayout>
