<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@drawable/t_shopdetails_bg"
        >
        <LinearLayout
            android:id="@+id/shopdetails_ly_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_above="@+id/shopdetails_ly_02"
            android:layout_alignParentTop="true"
            android:padding="5dp">
            <ImageView
                android:id="@+id/activity_shopdetails_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                tools:src="@drawable/pic_normal_square"
                android:layout_marginLeft="@dimen/margin_10"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/activity_shopdetails_shopName"
                    style="@style/WhiteText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="武汉星威汽车销售服务有限公司"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/activity_shopdetails_shopAddress"
                        style="@style/LightGrayText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:ellipsize="end"
                        tools:text="湖北省武汉市硚口区解放大道586号中御广场一层1-2号1232132132132132132131232131231232131221312321213123132312132132"/>
                    <TextView
                        android:id="@+id/activity_shopdetails_shopTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        style="@style/WhiteText14"
                        tools:text="咨询电话：027-84820104"/>
                    <TextView
                        android:id="@+id/activity_shopdetails_serviceHotline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        style="@style/WhiteText14"
                        tools:text="售后电话：027-84820104"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shopdetails_ly_02"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#73000000"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <RelativeLayout
                android:id="@+id/shop_details_company_column"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/shop_details_company_column_textview"
                    style="@style/WhiteText12"
                    android:layout_centerInParent="true"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/ic_home_column"
                    android:gravity="center_horizontal"
                    android:text="栏目"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:src="@drawable/ic_home_triangle"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@color/black"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/shop_details_company_profile"
                style="@style/WhiteText12"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_home_introduction"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="公司介绍"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/black"
                />

            <TextView
                android:id="@+id/shop_details_company_address"
                style="@style/WhiteText12"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/ic_home_address"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="店铺地址"/>
        </LinearLayout>
    </RelativeLayout>
    <com.hxqc.mall.thirdshop.views.ShopDetailsTabView
        android:id="@+id/t_activity_shop_details_tabview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
