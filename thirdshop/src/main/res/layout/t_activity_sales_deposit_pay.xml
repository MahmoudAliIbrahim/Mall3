<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/call_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/t_orders_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e8e8e8"
                android:padding="16dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_spd_deposit_notify_top"
                        android:textColor="#3abb3e"
                        android:textSize="@dimen/text_size_16"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_us_margin_top_10"
                        android:drawableLeft="@drawable/icon_shop_number_two"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/icon_shop_number_two"
                        android:text="@string/t_spd_deposit_tips1"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/icon_shop_number_one"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/icon_shop_number_one"
                        android:text="@string/t_spd_deposit_tips2"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />

                    <TextView
                        android:id="@+id/t_show_order_id"
                        style="@style/BlackText12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/about_us_margin_top_10"
                        tools:text="hehda"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    style="@style/BlackText14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="16dp"
                    android:text="选择支付方式"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_payment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:paddingEnd="@dimen/margin_16"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:paddingStart="@dimen/margin_16"
                >

                <TextView
                    android:id="@+id/deposit_amount_sales"
                    style="@style/RedText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:text="支付订金：2000元"
                    />

                <Button
                    android:id="@+id/btn_deposit_pay_sales"
                    style="@style/btn_orange"
                    android:layout_width="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:text="确定"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <com.hxqc.mall.thirdshop.views.CallBar
        android:id="@+id/call_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
