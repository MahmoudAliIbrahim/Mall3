<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/installmentbuycar_item_morecar_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View style="@style/UnderLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_16"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_10"
            >
            <TextView
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="2016款 改款GLA 200 动感型"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/GrayText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺参考价 : "/>
                    <TextView
                        style="@style/GrayText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="23-25万"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/GrayText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="厂商指导价 : "/>
                    <TextView
                        style="@style/GrayText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="23-25万"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/GrayText13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="首付比例："/>
                        <TextView
                            style="@style/PriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="30%"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            style="@style/GrayText13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="分期期数："/>
                        <TextView
                            style="@style/PriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="24期"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View style="@style/UnderLine"  />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/BlackText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="首付："/>
                <TextView
                    style="@style/PriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥25万"/>
            </LinearLayout>
            <View android:layout_width="@dimen/divider_height_1" android:layout_height="match_parent"  android:background="@color/divider" android:layout_margin="4dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    style="@style/BlackText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="月供："/>
                <TextView
                    style="@style/PriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="￥1158/月"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
