<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_appointment"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:background="@drawable/box_1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_success1"
                    android:gravity="center"
                    android:text="预约成功"
                    android:textColor="#179F5D"
                    android:textSize="20sp" />

                <TextView
                    style="@style/GrayText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="我们的工作人员会尽快与您取得联系" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_3"
                android:orientation="vertical">

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_customer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    app:auto_info_first_text="联系人:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />


                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="手机号码:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_auto_plate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="车牌号:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_auto_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="车辆信息:"
                    app:auto_info_two_marginLeft="16dp" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_store"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="服务门店:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_service_type"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="服务类型:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="预约时间:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <!--<com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_adviser"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="服务顾问:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />

                <com.hxqc.mall.auto.view.CommenTwoTextView
                    android:id="@+id/reserve_success_mechanic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:paddingTop="6dp"
                    app:auto_info_first_text="维修技师:"
                    app:auto_info_two_marginLeft="16dp"
                    app:auto_info_two_text_singleline="true" />-->

                <Button
                    android:id="@+id/reserve_success_finish_btn"
                    style="@style/btn_orange"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="12dp"
                    android:text="完成" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>