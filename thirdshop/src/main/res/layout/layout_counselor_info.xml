<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/counselor_info_logo"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:src="@drawable/ic_check_sel" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/counselor_info_name"
                    style="@style/BlackText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名: 王明" />

                <TextView
                    android:id="@+id/counselor_info_station"
                    style="@style/BlackText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="岗位: 机械技工" />

                <TextView
                    android:id="@+id/counselor_info_phone"
                    style="@style/BlackText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="咨询电话: 84800000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/counselor_info_experience"
                style="@style/GrayText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经历:" />

            <TextView
                android:id="@+id/counselor_info_speciality"
                style="@style/GrayText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="工作特长:" />

            <TextView
                android:id="@+id/counselor_info_motto"
                style="@style/GrayText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="工作格言:" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>