<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/tag_background" />

    <View style="@style/UnderLine" />

    <RelativeLayout
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin_16"
        android:paddingRight="@dimen/activity_vertical_margin_16"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/title_text"
            style="@style/RedText16"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            tools:text="新车销售" />

        <ImageView
            android:id="@+id/right_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_4s" />

        <TextView
            style="@style/BlackText14"
            android:layout_marginRight="@dimen/normal_margin_small_8"
            android:layout_toLeftOf="@id/right_icon"
            android:layout_centerVertical="true"
            android:text="全部" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>
