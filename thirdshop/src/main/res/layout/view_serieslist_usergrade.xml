<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="#eaeaea" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />

    <RelativeLayout
        android:id="@+id/to_total"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_click_style">

        <TextView
            style="@style/BlackText16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="口碑评价"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_grade_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:paddingRight="12dp"
            android:text="0人评价"
            android:textColor="#888"
            android:textSize="14sp" />


        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_right_arraw_press" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dedede" />


    <com.hxqc.widget.GridViewNoSlide
        android:id="@+id/user_grade_gv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:clipToPadding="false"
        android:drawSelectorOnTop="true"
        android:horizontalSpacing="10dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="12dp" />

    <com.hxqc.widget.ListViewNoSlide
        android:id="@+id/user_grade_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="18dp"
        android:divider="#dedede"
        android:dividerHeight="0.5dp"
        android:listSelector="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/publish_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:paddingBottom="8dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_line_round"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:text="发表口碑评价吧..."
            android:textColor="#999"
            android:textSize="12sp" />


    </RelativeLayout>

</LinearLayout>