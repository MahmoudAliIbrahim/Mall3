<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_news_item_click_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp">

    <ImageView
        android:id="@+id/iv_news_item"
        android:layout_width="@dimen/app_item_auto_image_width_96"
        android:layout_height="@dimen/app_item_auto_image_height_55"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        tools:background="@drawable/pic_normal"
    />

    <TextView
        android:id="@+id/tv_news_title"
        style="@style/BlackText14"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_toEndOf="@+id/iv_news_item"
        android:layout_toRightOf="@+id/iv_news_item"
        tools:text="title"
    />

    <TextView
        android:id="@+id/tv_news_post_time"
        style="@style/GrayText10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_title"
        android:layout_toEndOf="@+id/iv_news_item"
        android:layout_toRightOf="@+id/iv_news_item"
        tools:text="2010-44-00"
    />

    <TextView
        android:id="@+id/tv_news_info"
        style="@style/GrayText12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_news_post_time"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/iv_news_item"
        android:layout_toRightOf="@+id/iv_news_item"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="content"
    />
</RelativeLayout>
