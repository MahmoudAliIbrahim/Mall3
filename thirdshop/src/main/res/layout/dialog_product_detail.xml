<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:divider="@drawable/line"
    app:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="21dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="21dp">

        <ImageView
            android:id="@+id/dialog_product_detail_photo"
            style="@style/AccImage"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="36dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_product_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_and_price"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/dialog_product_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_subheading"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/dialog_product_detail_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_subheading"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_product_detail_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dialog_close" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商品数量:"
            android:textColor="@color/text_color_subheading"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/dialog_product_detail_minus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_minus_sel" />

        <TextView
            android:id="@+id/dialog_product_detail_edit"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginLeft="1dp"
            android:background="#e7e7e7"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/dialog_product_detail_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/btn_plus_sel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_product_detail_ok"
            style="@style/btn_orange"
            android:gravity="center"
            android:text="确   定" />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>


