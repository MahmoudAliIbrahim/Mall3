<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/four_s_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_cost"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/goods_cost"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <TextView
                android:id="@+id/order_cost"
                style="@style/RedText14"
                android:layout_marginTop="6dp"
                tools:text="订单总额"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dashed_line"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/package_discount"
                style="@style/RedText14"
                android:layout_marginTop="3dp"
                tools:text="订单总额"/>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dashed_line"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/should_pay"
                style="@style/RedText14"
                android:layout_marginTop="3dp"
                tools:text="订单总额"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_2"
            android:orientation="vertical">

            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="工时总额："/>

            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:text="材料总额："
                android:layout_marginTop="6dp"
                android:id="@+id/textView" />

            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="6dp"
                android:text="订单总额："/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dashed_line"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/text_1"
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:text="套餐折扣："/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/shape_dashed_line"
                android:layout_marginTop="3dp"/>

            <TextView
                style="@style/BlackText14"
                android:layout_gravity="right"
                android:layout_marginTop="3dp"
                android:text="实付总额："/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>