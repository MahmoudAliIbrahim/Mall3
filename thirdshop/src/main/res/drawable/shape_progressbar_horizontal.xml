<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2.0dip" />
            <gradient
                android:angle="270.0"
                android:centerColor="@color/cut_off_rule_bg"
                android:centerY="2.0"
                android:endColor="@color/cut_off_rule_bg"
                android:startColor="@color/cut_off_rule_bg" />
        </shape>
    </item>
    <!--第一进度条-->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2.0dip" />
                <gradient
                    android:angle="270.0"
                    android:centerColor="@color/orange_press"
                    android:centerY="2.0"
                    android:endColor="@color/orange_press"
                    android:startColor="@color/orange_press" />
            </shape>
        </clip>
    </item>

</layer-list>