<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.hxqc.mall.core.api.RequestFailView
        android:id="@+id/brand_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></com.hxqc.mall.core.api.RequestFailView>

    <com.hxqc.widget.PinnedHeaderExpandableListView
        android:id="@+id/brand_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="false"/>

    <com.hxqc.mall.core.views.SideBar
        android:id="@+id/brand_sidebar"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="80dp"/>

</RelativeLayout>