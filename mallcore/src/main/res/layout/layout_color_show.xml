<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/buy_verify_without_color_label"
            android:textColor="@color/straight_matter_and_secondary_text"
            android:textSize="14sp"/>

        <com.hxqc.mall.core.views.ColorSquare
            android:id="@+id/color_square_appearance"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/interior_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/interior_tip_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/buy_verify_interior_color_label"
            android:textColor="@color/straight_matter_and_secondary_text"
            android:textSize="14sp"/>

        <com.hxqc.mall.core.views.ColorSquare
            android:id="@+id/color_square_interior"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
</LinearLayout>
