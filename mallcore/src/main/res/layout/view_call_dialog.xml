<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:background="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/call_dialog_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp">

            <TextView
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call_phone"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/call_dialog_number_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/call_dialog_title_layout"
            android:layout_marginTop="10dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/call_dialog_number"
                style="@style/GrayText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="400-1858-555" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/call_dialog_cancel"
                style="@style/BlackText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/cancel"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/call_dialog_to_call"
                style="@style/BlueText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/to_call"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>