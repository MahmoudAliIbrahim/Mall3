<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toast_height_56"
                android:background="@color/toast_yellow">

    <ImageView
        android:id="@+id/icon"
        style="@style/Icon24"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin_big_16"
        android:src="@drawable/ic_info" />

    <TextView
        android:id="@+id/content"
        style="@style/WhiteText14"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/normal_margin_small_8"
        android:layout_toRightOf="@id/icon"/>
</RelativeLayout>
