<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@color/transparent"
              android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_around_info_window"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="9dp">

        <TextView
            android:id="@+id/title_around_map"
            style="@style/BlackText14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:maxWidth="230dp"
            android:textSize="15sp"
            tools:text="龙翔冻结停车场"
        />

        <TextView
            android:id="@+id/address_around_map"
            style="@style/BlackText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:maxWidth="230dp"
            android:minWidth="220dp"
            android:textSize="13sp"
            tools:text="地址：汉阳区龙阳大道龙翔东路水墨甲秀5栋"
        />


        <View
            android:id="@+id/around_map_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/btn_gray"
        />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/charge_station_type"
                style="@style/GrayText12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:gravity="center"
                android:text="电站类型：公共站"
                android:textSize="13sp"
                />

            <LinearLayout
                android:layout_below="@+id/charge_station_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingLeft="4dp"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/GrayText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="收费标准："
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/charge_fee"
                    style="@style/OrangeText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="1.19-1.67"
                    />

                <TextView
                    style="@style/GrayText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="元"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/charge_station_logo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="57dp"
                android:layout_height="20dp"
                android:src="@drawable/pic_normal"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/gas_ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <TextView
                style="@style/GrayText12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingLeft="4dp"
                android:gravity="start"
                android:text="可用交流总数:"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/charge_available_alternating"
                style="@style/OrangeText12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="5"
                />

            <TextView
                style="@style/GrayText12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="start"
                android:text="可用直流总数:"
                android:textSize="13sp"
                />

            <TextView
                android:id="@+id/charge_available_direct"
                style="@style/OrangeText12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:textSize="13sp"
                android:text="6"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/map_around_navi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="6dp"
            android:background="@color/font_blue">
            <TextView

                style="@style/BlueText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/a_ic_map_navi"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/a_ic_map_navi"
                android:gravity="center"
                android:padding="6dp"
                android:text="到这去"
                android:textColor="@color/white"
            />
        </RelativeLayout>

    </LinearLayout>


    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="-4dp"-->
        <!--android:src="@drawable/map_around_mark"-->
    <!--/>-->


</LinearLayout>
